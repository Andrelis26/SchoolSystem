<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="~/css/template.css" rel="stylesheet" />
    <title>@ViewBag.Title Inicio</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="row">
        <div class="col-xs-5 col-sm-5 col-md-6 col-md-push-1">
            <img src="~/Image/school.png" height="120" />
        </div>
        <div class="col-xs-6 col-sm-5 col-md-5 ">
            <div class="repDom"></div>
            <div class="pSearch">
                <!--[COLOCAR BUSCADOR EN ESTA PARTE]-->
                <div class="search">
                    <form>
                        <div class="input-group">
                            <input type="text" class="form-control" placeholder="Search">
                            <div class="input-group-btn">
                                <button class="btn btn-default" type="submit">
                                    <i class="glyphicon glyphicon-search"></i>
                                </button>
                            </div>
                        </div>
                    </form>
                </div><!--end search-->
            </div><!--end pSearch-->
            <div class="navMenu">
                <!--[COLOCAR EN ESTA PARTE EL MENU DE NAVEGACION FACIL]-->
                <ul class="menu">
                    <li><a href="@Url.Action("Index","Home")">Inicio</a></li>
                    <li><a href="@Url.Action("About","Home")">Mapa de sitio</a></li>
                    <li><a href="@Url.Action("Contact","Home")">Contacto</a></li>
                </ul><!--end menu-->
            </div><!--end navMenu-->
        </div><!--end headerBoxBox1-->
    </div>
    <div>
        <div class="navbar nav-custom ">
            <div class="container">
                <div class="navbar-header">
                    <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                        <span class="icon-bar"></span>
                    </button>
                </div>
                <div class="navbar-collapse collapse">
                    <ul class="nav navbar-nav ">
                        <li>@Html.ActionLink("Inicio", "Index", "Home")</li>
                        <li>@Html.ActionLink("Sobre Nostros", "Contact", "Home")</li>

                        <li class="treeview">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Admisiones
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li> @Html.ActionLink("Requisitos admisión", "InfoAdmi", "Admisiones")</li>
                                <li> @Html.ActionLink("Solicitud admisión", "Create", "Admisiones")</li>
                            </ul>
                        </li>

                        <li class="treeview">
                        <li class="dropdown">
                            <a class="dropdown-toggle" data-toggle="dropdown" href="#">
                                Servicios
                                <span class="caret"></span>
                            </a>
                            <ul class="dropdown-menu">
                                <li>@Html.ActionLink("Solicitar Record de Notas", "Index", "Service")</li>
                              
                            </ul>
                        </li>
                        <li>@Html.ActionLink("Transparencia", "Transparecia", "Home")</li>
                    </ul>
                    <ul class="nav navbar-nav navbar-right">
                        <li><a href="#"><span class="glyphicon glyphicon-log-in"></span></a></li>
                        <li>@Html.ActionLink("Iniciar Sesión", "Account", "Login")</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class=" body-content">
        @RenderBody()
        <footer class="color-footer text-color-footer" style="padding-top: 10px;padding-bottom: 10px">
            <ul id="linesLogos">
                <li id="logo1"><img src="~/Image/school-logo.png" class="img-responsive"/></li><!--[SUSTITUIR LA IMAGEN "logoFooter1.gif" POR EL LOGO DE LA INSTITUION]-->
                <li id="logo2"><img src="~/Image/1200px-Coat_of_arms_of_the_Dominican_Republic.svg.png" class="img-responsive" /> </li><!--[ESTE ES EL ESCUDO DE LA REPUBLICA DOMINICANA]-->
            </ul><!--end linesLogos-->

            <ul class="text-center">
                <li id="space">&nbsp;</li>
                <li>
                    <a href="#">Escuela David Durán  </a><!--[ESPECIFICAR LA RUTA AL INICIO DEL PORTAL]--><br>
                    Avenida Máximo Gómez esquina Santiago, No.02 Gazcue, Distrito Nacional, República Dominicana.<br>
                    Tel.:8092312774 | email: <a href="mailto:infoescueladavidduran@gmail.com">infoescueladavidduran@gmail.com</a><br>
                    <span>&copy; @DateTime.Now.Year Todos los Derechos Reservados</span>
                </li><!--end info-->
            </ul><!--end infoFooter-->
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
