@model IEnumerable<Model.Calificaciones>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_InternalHome.cshtml";
}

<style>
    .panel-heading {
        color: #fff !important;
        background-color: #22233e !important;
    }
</style>

<div class="panel panel-default">
    <div class="panel-heading text-center">Calificaciones</div>
    <div class="panel-body">
        @if (Session["Rol"].ToString() == "Estudiante")
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName("Materias")
                    </th>
                    <th>
                        @Html.DisplayName("Profesor")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nota)
                    </th>
                </tr>

                @foreach (var item in ViewBag.Student)
                {
                    <tr>
                        <td>
                            @item.Materias.Descripcion
                        </td>
                        <td>
                            @item.Profesor.Nombres
                        </td>
                        <td>
                            @item.Nota
                        </td>
                    </tr>
                }

            </table>
        }

        @if (Session["Rol"].ToString() == "Profesor")
        {
            <table class="table">
                <tr>
                    <th>
                        @Html.DisplayName("Materias")
                    </th>
                    <th>
                        @Html.DisplayName("Profesor")
                    </th>
                    <th>
                        @Html.DisplayName("Estudiante")
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Nota)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.Materias.Descripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Profesor.Nombres)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estudiante.Primer_Nombre)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Nota)
                        </td>
                        <td>
                            @Html.ActionLink("Editar", "Edit", new { id = item.Id }, new { @class = "btn btn-danger" })
                            @Html.ActionLink("Detalles", "Details", new { id = item.Id }, new { @class = "btn btn-primary" })
                        </td>
                    </tr>
                }

            </table>

        }
    </div>
</div>